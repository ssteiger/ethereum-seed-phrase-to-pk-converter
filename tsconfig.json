{
  "compilerOptions": {
    "target": "es5",
    "outDir": ".dist/",

    "module": "commonjs",
    "lib": ["es5", "scripthost", "es2015"],
    "sourceMap": false,

    "types": [
      "node"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
